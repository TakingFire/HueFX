{
  "name": "huefx",
  "productName": "HueFX",
  "author": "TakingFire",
  "version": "0.2.0",
  "description": "A simple effects dashboard for Philips Hue lights.",
  "main": "./app/main.js",
  "repository": "github:TakingFire/HueFX",
  "license": "MIT",
  "build": {
    "directories": {
      "buildResources": "./app/resources"
    },
    "files": [
      "package.json",
      "app/**/*"
    ],
    "appId": "xyz.bacur.huefx",
    "artifactName": "${productName}.${ext}",
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icon.png"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "dependencies": {
    "jquery": "^3.6.0"
  },
  "devDependencies": {
    "electron": "^19.0.1",
    "electron-builder": "^23.0.3"
  }
}
